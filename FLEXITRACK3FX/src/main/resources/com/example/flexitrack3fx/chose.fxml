<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"  fx:controller="com.example.flexitrack3fx.Principal">
    <center>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="300.0" spacing="80.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="registerButton" mnemonicParsing="false" onAction="#openRegisterWindow" prefHeight="50.0" prefWidth="87.0" text="REGISTER" />
                <Button fx:id="loginButton" mnemonicParsing="false" onAction="#openLoginWindow" prefHeight="50.0" prefWidth="87.0" text="LOGIN" />
                <Button fx:id="exitButton" mnemonicParsing="false" onAction="#exitApplication" prefHeight="50.0" prefWidth="87.0" text="EXIT" textFill="#e10b0b" />
            </children>
        </HBox>
    </center>
</BorderPane>
